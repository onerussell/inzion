<link href="{$tplDir}js_upload/style.css" rel="stylesheet" type="text/css" />

<script type="text/javascript" src="{$tplDir}js_upload/js/swfupload.js"></script>
<script type="text/javascript" src="{$tplDir}js_upload/js/swfupload.queue.js"></script>
<script type="text/javascript" src="{$tplDir}js_upload/js/fileprogress.js"></script>
<script type="text/javascript" src="{$tplDir}js_upload/js/handlers.js"></script>

<script type="text/javascript">
var tplDir     = '{$tplDir}';	
var upload_dir = '{$siteAdr}base/{$module}/Ajaxupload';
var swfu;
{literal}	
		window.onload = function() {
			var settings = {
				flash_url : tplDir + "js_upload/js/swfupload.swf",
				upload_url: upload_dir,	// Relative to the SWF file
				post_params: {"mbm3id" : "{/literal}{php} echo session_id(); {/php}{literal}", "rand_id" : "{/literal}{$rand_id}{literal}", "mod": "upload"},
				file_size_limit : "100 MB",
				file_types : "*.*",
				file_types_description : "Все файлы",
				file_upload_limit : 100,
				file_queue_limit : 0,
				custom_settings : {
					progressTarget : "fsUploadProgress",
					cancelButtonId : "btnCancel"
				},
				debug: false,

				// Button settings

				
                button_image_url : tplDir + "js_upload/XPButtonUploadText_61x22.png",	// Relative to the SWF file
				button_placeholder_id : "plh",
				button_width: 61,
				button_height: 22,				
				
				// The event handler functions are defined in handlers.js
				file_queued_handler : fileQueued,
				file_queue_error_handler : fileQueueError,
				file_dialog_complete_handler : fileDialogComplete,
				upload_start_handler : uploadStart,
				upload_progress_handler : uploadProgress,
				upload_error_handler : uploadError,
				upload_success_handler : uploadSuccess,
				upload_complete_handler : uploadComplete,
				queue_complete_handler : queueComplete	// Queue plugin event
			};

			swfu = new SWFUpload(settings);
	     };
  
{/literal}
</script>
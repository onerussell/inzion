<div class="content02">
{if $send}
<br /><br /><br />
<table class="req-form">
<tr><td style="font-size: 15px;">
    {#cont_res#}
</td></tr>
</table>    
{else}
<script language="javascript">
var err1 = '{#err1#}';
var err2 = '{#err2#}';
{literal}
    function Subm() {
        var e = 0;
        if (''==_v('name').value) {
        	_v('errs').innerHTML = err1;
        	e = 1;
        } else if (''==_v('phone').value && ''==_v('email').value) {
            _v('errs').innerHTML = err2;
            e = 1;
        }    
        if (!e)
            _v('fmx').submit();
    }
{/literal}
</script>
                <form method="post" id="fmx" action="{$siteAdr}{$lang}/request/">
		        <table class="req-form">
				<tr>
						<td width="50%">
							<p><span>{#name#}</span> <input type="text" id="name" name="fm[name]" value="{$fm.name}" size="30" style="font-size:10px;" /></p>
							<p><span>{#interested#}:</span></p>
							<ul>
								<li><input name="fm[serv][1]" value="1"{if $fm.serv.1} checked="checked"{/if} type="checkbox" /><label>{#s1#}</label></li>
								<li><input name="fm[serv][2]" value="1"{if $fm.serv.2} checked="checked"{/if} type="checkbox" /><label>{#s2#}</label></li>
								<li><input name="fm[serv][3]" value="1"{if $fm.serv.3} checked="checked"{/if} type="checkbox" /><label>{#s3#}</label></li>
								<li><input name="fm[serv][4]" value="1"{if $fm.serv.4} checked="checked"{/if} type="checkbox" /><label>{#s4#}</label></li>
								<li><input name="fm[serv][5]" value="1"{if $fm.serv.5} checked="checked"{/if} type="checkbox" /><label>{#s5#}</label></li>
								<li><input name="fm[serv][6]" value="1"{if $fm.serv.6} checked="checked"{/if} type="checkbox" /><label>{#s6#}</label></li>
								<li><input name="fm[serv][7]" value="1"{if $fm.serv.7} checked="checked"{/if} type="checkbox" /><label>{#s7#}</label></li>
								<li><input name="fm[serv][8]" value="1"{if $fm.serv.8} checked="checked"{/if} type="checkbox" /><label>{#s8#}</label></li>
								<li><input name="fm[serv][9]" value="1"{if $fm.serv.9} checked="checked"{/if} type="checkbox" /><label>{#s9#}</label></li>
								<li><input name="fm[serv][10]" value="1"{if $fm.serv.10} checked="checked"{/if} type="checkbox" /><label>{#s10#}</label></li>
								<li><input name="fm[serv][11]" value="1"{if $fm.serv.11} checked="checked"{/if} type="checkbox" /><label>{#s11#}</label></li>
							</ul><br />
							<p><span class="bullet3">{#other_serv#}</span></p>
							<textarea name="fm[other_serv]" style="width:250px;margin-left:20px;height:30px;">{$fm.other_serv}</textarea>
						    <div id="errs" style="margin-top: 0px; align: left; height: 25px;">
						    
						    </div>
						</td>
						<td width="50%">
							<p><span style="line-heght:20px;">{#cont#}</span></p>
							<div>
								<p>{#phone#} <input type="text" name="fm[phone]" id="phone" value="{$fm.phone}" style="font-size:10px; width: 180px;" /></p>
								<p>{#email#} <input type="text" name="fm[email]" id="email" value="{$fm.email}" style="font-size:10px; width: 180px;" /></p>
							</div>
							<p><span>{#comments#}</span><br />
								<textarea name="fm[comments]" style="width:280px;;height:170px; margin-top:5px; margin-left: 7px;">{$fm.comments}</textarea>
							</p>
							<table><tr><td style="width: 170px;">&nbsp;</td><td>
							<div class="rtq"><a href="javascript:Subm();" style="line-height:24px;">{#send#}</a></div>
							</td></tr></table>
							
						</td>
					</tr>
				</table>
			    </form>
{/if}	
</div>